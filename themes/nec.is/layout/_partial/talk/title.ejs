<% if (post.link){ %>
  <h3>
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank"><%= post.title %> - <%= post.topic %></a>
  </h3>
<% } else if (post.title){ %>
  <h3>
    <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %> - <%= post.topic %></a>
  </h3>
<% } %>